---
interface Props {
  date: string;
  title: string;
  company: string;
  responsabilities: string[];
}

const { date, title, company, responsabilities } = Astro.props;
---

<li class="ms-4">
  <div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-slate-600 dark:bg-slate-200"
  >
  </div>
  <time
    class="mb-1 text-sm font-normal leading-none text-slate-700 dark:text-slate-400"
  >
    {date}
  </time>
  <h3 class="text-lg font-bold text-amber-600 dark:text-sky-blue mt-2">
    {title} - <span class="font-semibold">{company}</span>
  </h3>
  {
    responsabilities.map(responsability => (
      <div class="flex gap-1 mt-1">
        <span class="font-bold"> - </span>

        <p class="mb-4 text-base font-normal text-slate-700 dark:text-slate-300 text-pretty">
          {responsability}
        </p>
      </div>
    ))
  }
</li>
