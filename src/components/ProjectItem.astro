---
import type { Project } from '../interfaces/Projects';
import Tooltip from './Tooltip.astro';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="grid gap-4 sm:gap-7">
  <figure
    class="relative bg-blue-100 dark:bg-gray-800/80 rounded-xl flex overflow-hidden cursor-pointer group/figure"
  >
    <img
      class="relative size-full object-cover -bottom-7 -right-7 rounded-lg group-hover/figure:-bottom-5 group-hover/figure:-right-5 transition-all duration-300 ease-in-out"
      src={project.image}
      alt={project.title}
    />
  </figure>
  <div class="flex flex-col gap-2.5 justify-center group/info">
    <h3 class="text-3xl font-bold text-amber-600 dark:text-sky-blue">
      {project.title}
    </h3>
    <p
      class="text-lg text-slate-700 dark:text-slate-300 md:line-clamp-[8] group-hover/info:line-clamp-none"
    >
      {project.description}
    </p>
    <div class="flex gap-2 items-center">
      {
        project.tags.map(tag => (
          <Tooltip text={tag.name}>
            <tag.icon class={`size-7 inline-block  ${tag.class}`} />
          </Tooltip>
        ))
      }
    </div>
  </div>
</article>
